.find {
  height: 100vh;
  position: relative;
  background-color: #f5f5f5;
  overflow: hidden;
}

.find .search {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  position: absolute;
  top: 0rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-between;
  background-color: #f6f5f6;
  padding: 5px 0;
  box-sizing: border-box;
}

.find .search .last{
  flex: 1;
  line-height: 70rpx;
}

.find .search .city {
  flex: 8.5;
  display: flex;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
}

.find .search .city .cityname {
  flex: 1.5;
  text-align: center;
  margin-right: 10rpx;
  font-size: 30rpx;
  min-width: 80rpx;
}

.find .search .city .icon-sj_bottom {
  flex: 1;
  font-size: 12rpx;
}

.find .search .city input {
  flex: 7.5;
  border-left: 1px solid #ccc;
  padding-left: 10px;
  font-size: 30rpx;
}

.find .search .ditu {
  flex: 0.6;
  padding: 15rpx 25rpx;
  box-sizing: border-box;
}

.find .search .ditu .border {
  width: 100%;
  height: 100%;
  border: 1px solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.find .type {
  width: 100%;
  height:  90rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
  margin-top: 90rpx;
}
.find .type .item {
  width: 25%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.find .type .item .area{
  font-size: 14px;
}
.find .type .item .icon-sj_bottom{
  font-size: 14rpx;
  color: #ccc;
  margin-left: 8px;
}

.find .new {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  margin-top: 10px;
  background-color: #fff;
}

.find .new .top {
  font-size: 18px;
  font-weight: 600;
}

.find .new .item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 120px;
  padding: 10px 0;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.find .new .item:last-child{
  border-bottom: none;
}

.find .new .item .left {
  flex: 4;
}
.find .new .item .left image{
    width: 100%;
    height: 100%;
}

.find .new .item .right {
  flex: 5.8;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.find .new .item .right .title{
  font-size: 14px;
}
.find .new .item .right .desc{
  font-size: 12px;
  color: #ccc;
}
.find .new .item .right .weizhi{
  font-size: 12px;
}
.find .new .item .right .weizhi text{
  display:inline-block;
  padding: 0 3px;
  box-sizing: border-box;
  background-color: #e1f5f8;
  color: #5bc8d5;
  border-radius: 3px;
  margin-right: 3px;
}
.find .new .item .right .weizhi text:nth-child(2){
  background-color: #e1f5ed;
  color: #3fc28c;
}
.find .new .item .right .weizhi text:nth-child(n+3){
  background-color: #e6f2ff;
  color: #5aabfd;
}
.find .new .item .right .price{
  color: #fa614c;
  font-size: 14px;
}
