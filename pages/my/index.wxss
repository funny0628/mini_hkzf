.my {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  
}
.my .top {
  position: relative;
}
.my .top image {
  width: 100%;

}
.my .top .myinfo {
  position: absolute;
  width: 80%;
  height: 150px;
  top: 130px;
  left: 50%;
  transform:translateX(-50%);
  box-shadow: 0 0 10px 3px #ddd;
  z-index: 99;
  background-color: #fff;
}