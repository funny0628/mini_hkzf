.login {
  width: 100%;

}
.login .top {
  width: 100%;
  height: 50px;
  line-height: 50px;
  display: flex;
  justify-content: center;
  position: relative;
  background-color: #f6f5f6;

}
.login .top .icon-fenye-shangyiye {
  position: absolute;
  left: 15px;
  top: 50%;
  transform: translateY(-50%);
}
.login .top .title {
  text-align: center;
}
.login .list {
  width: 100%;
  padding: 0 15px;
  box-sizing: border-box;
}
.login .list input {
  display: block;
  margin-top: 8px;
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  border-bottom: 1px solid #ccc;
}
.login .btn {
  margin: 15px;
  height: 50px;
  color: #fff;
  background-color: #1cb676;
  text-align: center;
  line-height: 50px;
  font-size: 16px;
}