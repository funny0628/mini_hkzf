.my {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  
}
.my .top {
  position: relative;
}
.my .top image {
  width: 100%;

}
.my .top .myinfo {
  position: absolute;
  width: 80%;
  height: 150px;
  top: 130px;
  left: 50%;
  transform:translateX(-50%);
  box-shadow: 0 0 10px 3px #ddd;
  z-index: 99;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.my .top .myinfo image{
  position: relative;
  top: -30px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.my .top .myinfo .youke{
  margin-top: -10px;
  margin-bottom: 10px;
}
.my .top .myinfo .btn{
  padding: 5px;
  background-color: #21b97a;
  color: #fff;
  font-size: 14px;
  border-radius: 5px;
}
.my .top .list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 50px;
}
.my .top .list .item {
  width: 33%;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;

}
.my .top .list .item text {
  margin-bottom: 10px;
  font-size: 18px;
}
.my .top .list .item .name {
  margin-bottom: 10px;
  font-size: 14px;
}
.my .card {
  width: 100%;
  display: flex;
    justify-content: center;
}
.my .top .card image {
  width: 90%;
  height: 90px;
  border-radius: 10px;
}