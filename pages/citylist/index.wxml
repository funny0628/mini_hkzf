<view class="citylist">
	<view class="top">
		<text class="iconfont icon-fenye-shangyiye"></text>
		<text class="title">城市选择</text>
	</view>
	<view class="state" wx:for="{{allcitylist}}" wx:key="index"  wx:for-item="item1">
		<text  wx:if="{{item1.children.length > 0}}" class="stateitem">{{item1.title}}</text>
		<view class="city">
			<text bindtap="clickItem" data-key="{{item1.title}}" wx:for="{{item1.children}}" wx:key="index" wx:for-item="item2" class="cityitem">{{item2}}</text>
		</view>
	</view>
	<view class="cityfirname">
		<text bindtap="clicktabfirst" data-value="{{item}}" data-key="{{index}}" class="{{ activeindex === index ? 'topname' : ''}}" wx:for="{{maoidan}}" wx:key="index">{{item}}</text>
	</view>
</view>